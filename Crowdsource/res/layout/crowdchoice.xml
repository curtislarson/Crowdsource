<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center">


<TextView 
android:text="Please choose a room."
 android:id="@+id/welcomeText" 
 android:layout_width="wrap_content" 
 android:layout_height="wrap_content"
 android:textSize="20sp"
 android:gravity="center_horizontal">
 </TextView>
<ScrollView 
android:id="@+id/roomScrollView" 
android:layout_width="wrap_content" 
android:layout_height="wrap_content">
<LinearLayout 
android:id="@+id/roomLinearLayout" 
android:layout_width="wrap_content" 
android:layout_height="wrap_content"
android:gravity="center">
</LinearLayout>
</ScrollView>
<Button android:text="Refresh" android:id="@+id/refreshButton" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
</LinearLayout>
